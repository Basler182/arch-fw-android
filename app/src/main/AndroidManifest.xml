<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.schk.archaeologicalfieldwork">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".main.MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".views.splash.SplashView"
            android:label="Archaeological Fieldwork"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".views.login.LoginView"
            android:label="Login"
            android:launchMode="singleTop">
        </activity>

        <activity
            android:name=".views.register.RegisterView"
            android:label="Login"
            android:launchMode="singleTop">
        </activity>

        <activity
            android:name=".views.home.HomeView"
            android:label="Login"
            android:launchMode="singleTop">
        </activity>

        <activity
            android:name=".views.edit.EditView"
            android:label="Edit">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".views.home.HomeView" />
        </activity>

        <activity
            android:name=".views.location.EditLocationView"
            android:label="Edit">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.edit.EditView" />
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

    </application>

</manifest>